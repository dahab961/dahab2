{{> navbar}}

<div class="wrapper mt-5">
    <div class="content" role="main">
        <div class="mt-5 text-center">
            <h1 class="three-d-text">קטגוריות</h1>

            {{#if categories}}
            <div class="container mt-5 mx-auto">
                <div class="row mx-auto">
                    {{#each categories}}
                    <div class="col-6 col-sm-6 col-md-4 col-lg-3 mb-4 mx-auto">
                        <a class="card animated-card2 h-100 shadow-sm text-decoration-none"
                            href="/products/{{this.code}}">
                            <img src="{{this.image}}" class="card-img-top img-fluid" alt="{{this.name}}">
                            <h5 class="card-title">{{this.name}}</h5>
                            <div class="card-body text-center">
                            </div>
                            <div class="text-dark bg-transparent border-top-0">
                                קוד: {{this.code}} <br>
                            </div>
                        </a>
                    </div>
                    {{/each}}
                </div>
            </div>
            {{else}}
            <div class="alert alert-warning mt-4" role="alert">
                אין קטגוריות להצגה
            </div>
            {{/if}}
        </div>
    </div>
</div>